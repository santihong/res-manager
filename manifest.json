{
  "manifest_version": 3,
  "name": "媒体资源下载器",
  "version": "3.0.0",
  "description": "自动下载当前页面或指定页面的图片、视频、音频、文档等资源，支持缩略图预览、选择性下载和Network监听",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "storage",
    "scripting",
    "webRequest",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
